/* General Body and HTML Styles */
html, body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    background: #0f2027;
    color: #fff;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
}

/* Main container to hold everything */
.container {
    display: flex;
    flex-grow: 1;
}

/* Navbar Styles */
.nav {
    width: 240px;
    background-color: rgba(0, 0, 0, 0.8);
    padding: 20px;
    box-shadow: 4px 0 10px rgba(0, 0, 0, 0.4);
    text-align: center;
    transition: all 0.3s ease;
}

.nav h4 {
    font-size: 1.8rem;
    margin-bottom: 20px;
    color: #ffcc00;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.nav ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.nav ul li {
    margin: 15px 0;
}

.nav ul li a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    padding: 10px;
    display: block;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.nav ul li a:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
}

/* Hero Section Styles */
.hero-section {
    position: relative;
    width: 100%;
    height: 400px;
    background-image: url('apollo-hero.jpg'); /* Add your background image */
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    text-align: center;
    border-bottom: 5px solid #ffcc00;
}

.hero-content h1 {
    font-size: 3.5rem;
    margin: 0;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
}

.hero-content p {
    font-size: 1.5rem;
    margin-top: 10px;
    text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.7);
}

/* Main content area styles */
.main {
    flex-grow: 1;
    padding: 40px;
    text-align: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #e0e0e0;
}

/* Content section styles */
.content-section {
    margin: 40px 0;
}

.content-section h2 {
    font-size: 2rem;
    color: #ffcc00;
    margin-bottom: 20px;
}

.content-section p {
    font-size: 1.2rem;
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
}

/* Gallery Styles */
.gallery {
    display: grid;
    grid-template-columns: repeat(5, 1fr); /* 5 columns */
    gap: 20px;
    justify-items: center;
    margin-top: 30px;
}

.gallery-item {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.gallery-img {
    width: 100%;
    height: 200px;  /* Fixed height for uniform size */
    object-fit: cover;
    transition: transform 0.3s ease, opacity 0.3s ease;
    cursor: pointer;
    border-radius: 8px;
}

/* Video Section Styles */
.video-section {
    margin-top: 40px;
}

.video-section h2 {
    font-size: 2rem;
    color: #ffcc00;
    margin-bottom: 20px;
}

.videos {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 columns for videos */
    gap: 20px;
    justify-items: center;
}

.video-item video {
    width: 100%;
    height: auto;
    border-radius: 10px;
}

/* Lightbox Styles */
.lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.lightbox-content {
    max-width: 80%;
    max-height: 80%;
}

.close {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 3rem;
    color: #fff;
    cursor: pointer;
}

/* Button Styles */
.btn {
    background-color: #fff;
    color: #000;
    padding: 12px 30px;
    font-weight: bold;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.btn:hover {
    background-color: #000;
    color: #fff;
    transform: scale(1.05);
}

/* Footer Styles */
footer {
    background-color: rgba(0, 0, 0, 0.8);
    color: #e0e0e0;
    text-align: center;
    padding: 20px;
    box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.3);
}
