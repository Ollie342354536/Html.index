body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.nav {
    background: rgba(0, 0, 0, 0.6);
    padding: 20px;
    text-align: center;
}

.nav h4 {
    margin: 0;
    font-size: 2em;
}

.nav ul {
    list-style: none;
    padding: 0;
}

.nav ul li {
    display: inline;
    margin: 0 10px;
}

.nav ul li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

.nav img {
    width: 100px;
    margin-top: 20px;
}

h1 {
    text-align: center;
    margin-top: 20px;
    font-size: 3em;
}

.main {
    padding: 20px;
    text-align: center;
}

h2 {
    font-size: 2em;
    margin-top: 30px;
}

p {
    font-size: 1.2em;
    line-height: 1.6;
    margin-top: 10px;
}

img {
    width: 100%;
    margin-top: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

footer {
    background: rgba(0, 0, 0, 0.6);
    padding: 10px;
    text-align: center;
    margin-top: auto;
}
